{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"organizeImports": { "enabled": true },
	"linter": {
		"enabled": true,
		"rules": {
			"complexity": {
				"noExcessiveCognitiveComplexity": { "level": "info" }
			},
			"style": {
				"useConst": { "level": "off" },
				"useForOf": { "level": "info" },
				"useShorthandAssign": { "level": "info" },
				"useShorthandFunctionType": { "level": "info" }
			}
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"quoteStyle": "single",
			"lineWidth": 80
		}
	}
}
