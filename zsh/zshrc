# ZSH FUNCTIONS
hist() { peco < $HISTFILE } # search history
chmodx() { sudo chmod u+x $1 }
take() { mkdir $1 && cd $1 }
softclone() { git clone ssh://soft/$(ssh soft repo list | peco) }
serve() { simple-http-server -i --nocache --threads 6 --ip 127.0.0.1 ${1-./} }
